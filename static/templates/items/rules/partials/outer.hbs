<section class="rule-form" data-key="{{rule.key}}" data-idx="{{index}}">
    <header>
        <i class="fa-solid fa-bars drag-handle"></i>
        <h3{{#if (not recognized)}} class="unrecognized"{{/if}}>{{label}}</h3>
        <label class="priority" data-tooltip aria-label="{{localize "PF2E.RuleEditor.General.PriorityHint"}}">
            <i class="fa-solid fa-fw fa-list-ol" inert></i>
            <input type="number" value="{{rule.priority}}" data-priority
                   {{#unless rule.priority includeZero=true}}placeholder="{{object.priority}}"{{/unless}} />
        </label>
        <div class="item-controls">
            <button type="button" class="inline-control icon fa-solid fa-edit" data-action="edit-rule-element"
                    data-rule-index="{{index}}" data-tooltip aria-label="{{localize "PF2E.Item.Rules.Edit"}}"></button>
            <button type="button" class="inline-control icon fa-solid fa-trash" data-action="remove-rule-element"
                    data-rule-index="{{index}}" data-tooltip aria-label="{{localize "PF2E.Item.Rules.Remove"}}"></button>
        </div>
    </header>
    <div class="container{{#if autogenerate}} autogenerated flexcol{{/if}}">
        {{{template}}}
    </div>

    {{#if validationFailures}}
        <ul class="validation-failures flexcol">
            {{#each validationFailures as |message|}}
                <li>{{message}}</li>
            {{/each}}
        </ul>
    {{/if}}
</section>
