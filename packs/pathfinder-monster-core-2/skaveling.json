        },
        {
            "_id": "WvbDVFf0oIn9hEQE",
            "img": "systems/pf2e/icons/actions/OneAction.webp",
            "name": "Consume Flesh",
            "sort": 500000,
            "system": {
                "actionType": {
                    "value": "action"
                },
                "actions": {
                    "value": 1
                },
                "category": "offensive",
                "description": {
                    "value": "<p><strong>Requirements</strong> The skaveling is adjacent to the corpse of a creature that died within the last hour</p><hr /><p><strong>Effect</strong> The skaveling devours a chunk of the corpse and regains 1d6 Hit Points plus 1d6 for every 2 levels the skaveling has. They can regain Hit Points from any given corpse only once.</p>"
                },
